<!-- BOOTSTRAP MODALS TRANSFER  -->

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">New Survey!</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header justify">
        <h5 class="modal-title" id="exampleModalLabel">Create Survey!</h5>
        </button>
      </div>

      <div class="modal-body">
        <form id="create-survey">
          <div class="form-group">
            <label for="survey-title">Survey Title</label>
            <input type="text" class="form-control" id="survey-title" name="survey[title]" placeholder="Title">
          </div>
          <div class="form-group">
            <label for="survey-question-1">Question 1</label>
            <input type="text" class="form-control" id="survey-question-1" name="question1[text]" placeholder="Question">
          </div>
          <div class="form-group">
            <label for="question-1-option-1">Question Options</label>
            <input type="text" class="form-control" id="question-1-option-1" name="question1[option1]" placeholder="Option 1">
            <input type="text" class="form-control" id="question-1-option-2" name="question1[option2]" placeholder="Option 2">
          </div>
          <button type="submit" class="btn btn-primary">Create Survey</button>
          <button type="submit" class="btn btn-primary">Add another question</button>
        </form>
      </div>
    </div>
  </div>
</div>
